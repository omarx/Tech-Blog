<div class="d-flex flex-column align-items-center">
    <article class="card w-75 card-border">
        <div class="card-header card-color d-flex align-items-center justify-content-between">
            <h2 class="card-title card-text-color mb-0">Login</h2>
        </div>
        <div class="card-body card-body-color">
           <div class="p-1">   
            <label>Email</label></br>
            <input type="text" class="w-100" id="eInput" name="userOrpass" /></br>
            </div>
            <div class="p-1">   
            <label>Username</label></br>
            <input type="text" class="w-100" id="uInput" name="userOrpass" /></br>
            </div>
            <div class="p-1">
            <label>Password</label></br>
            <input type="password" id="pInput" class="w-100" name="password" />
            </div>
             <div class="p-1">
            <label>Confirm Password</label></br>
