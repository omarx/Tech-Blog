<div class="d-flex flex-column align-items-center">
    {{#each postData}}
    <article class="card w-75 card-border">
        <div class="card-header card-color d-flex align-items-center justify-content-between">
            <h2 class="card-title card-text-color mb-0">{{title}}</h2>
            <span class="card-text-color author">Posted by {{user.username}} on {{formateDate createdAt}}  
                &nbsp; &nbsp;
    <button class="btn w-40 card-body-color"  onclick="window.location.href='/dashboard/edit-post/{{id}}'"  type="button" id="edit-post">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
    </svg> 
    Edit Post</a>       
</button>
        </span>
        </div>
        <div class="card-body card-body-color">
            <p class="card-text text-center card-body-text">{{body}}</p>
        </div>
    </article>
    {{/each}}
    <div class="d-flex flex-column align-items-center btm-position ">
        <button class="btn card-color w-18 card-body-text card-text-color btm-position">
            <a class="no-underline card-body-text card-text-color" href="/dashboard/add-post">+ New Post</a>
        </button>
    </div>
</div>

<script src="js/edit-post.js"></script>
